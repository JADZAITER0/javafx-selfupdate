<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?>

<VBox xmlns:fx="http://javafx.com/fxml"
      fx:controller="com.example.selfupdate.testjavafxmvci.controllers.SearchController"
      spacing="10">
    <padding>
        <Insets top="15" right="15" bottom="15" left="15" />
    </padding>

    <HBox spacing="10">
        <TextField fx:id="searchField" promptText="Search Anime..." />
        <Button text="Search" onAction="#onSearchClicked" />
    </HBox>

    <ListView fx:id="resultsList" prefHeight="500" />
</VBox>

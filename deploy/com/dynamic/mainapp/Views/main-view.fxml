<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox spacing="10" alignment="CENTER" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="com.dynamic.mainapp.Controllers.MainController">
    <padding>
        <Insets top="20" right="20" bottom="20" left="20"/>
    </padding>

    <Label text="URL Encoder" styleClass="title-label"/>
    <TextField fx:id="inputField" promptText="Enter text to encode..." maxWidth="300"/>
    <Button text="Encode" onAction="#encodeText"/>
    <TextArea fx:id="outputArea" editable="false" prefRowCount="4" wrapText="true"/>
</VBox>
